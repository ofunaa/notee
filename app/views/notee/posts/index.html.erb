<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Slug</th>
      <th>Status</th>
      <th>Category</th>
      <th>Thumbnail</th>
      <th>Published at</th>
      <th>Seo keyword</th>
      <th>Seo description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.slug %></td>
        <td><%= post.status %></td>
        <td><%= post.category_id %></td>
        <td><%= post.thumbnail_id %></td>
        <td><%= post.published_at %></td>
        <td><%= post.seo_keyword %></td>
        <td><%= post.seo_description %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
